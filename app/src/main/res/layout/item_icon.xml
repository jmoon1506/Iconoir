<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listItem"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/launcherItemIcon"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="16dp"
        android:layout_height="48dp"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageView
        android:id="@+id/target"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toEndOf="@+id/arrow"
        android:layout_toRightOf="@+id/arrow"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/target"
        android:layout_alignBottom="@+id/target"
        android:layout_toEndOf="@+id/target"
        android:layout_toRightOf="@+id/target"
        android:gravity="start|center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/launcher_item_states"
        android:textColor="@color/textGrey"
        android:text="Icon" />

</RelativeLayout>
